load("//tools/buck:rust_cxx_bridge.bzl", "rust_cxx_bridge")

rust_test(
    name = "test",
    srcs = ["test.rs"],
    deps = [":ffi"],
)

rust_library(
    name = "ffi",
    srcs = [
        "ffi/lib.rs",
        "ffi/alias.rs",
    ],
    crate = "cxx_test_suite",
    deps = [
        ":impl",
        "//:cxx",
    ],
)

cxx_library(
    name = "impl",
    srcs = [
        "ffi/tests.cc",
        ":alias/source",
        ":bridge/source",
    ],
    header_namespace = "cxx-test-suite",
    headers = {
        "alias.rs.h": ":alias/header",
        "lib.rs.h": ":bridge/header",
        "tests.h": "ffi/tests.h",
    },
    deps = ["//:core"],
)

rust_cxx_bridge(
    name = "bridge",
    src = "ffi/lib.rs",
)

rust_cxx_bridge(
    name = "alias",
    src = "ffi/alias.rs",
)
